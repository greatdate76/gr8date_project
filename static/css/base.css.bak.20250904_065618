/* ======================
   FINAL, authoritative logo sizing
   Works with <picture class="logo"> ... <img class="logo-img">
   ====================== */
.wrap > header .logo,
.site-header .logo,
.logo{
  display:flex !important;
  align-items:center !important;
  max-height:48px !important; /* hard safety cap */
}

/* Hard-size the logo image so SVG dimensions can't push layout */
.wrap > header .logo-img,
.site-header .logo-img,
.logo-img{
  width:160px !important;       /* fixed width on desktop */
  height:auto !important;        /* keep aspect ratio */
  max-height:48px !important;    /* extra safety cap */
  display:block !important;
  max-width:none !important;     /* override global img{max-width:100%} */
  flex:0 0 160px !important;     /* reserve space, don't stretch */
}

/* Header flex: logo takes only its content, icons get flexible space */
.wrap > header .left{ flex:0 0 auto !important; }
.wrap > header .right{ flex:1 1 auto !important; justify-content:flex-end !important; }

/* Mobile: slightly smaller */
@media (max-width:600px){
  .wrap > header .logo-img,
  .site-header .logo-img,
  .logo-img{
    width:130px !important;     /* fixed width on mobile */
    max-height:40px !important;
    flex:0 0 130px !important;
  }

  /* keep logo above icons and allow wrapping (defensive, in case inline styles differ) */
  .wrap > header{
    display:flex !important;
    flex-direction:column !important;
    align-items:center !important;
    gap:8px !important;
  }
  .wrap > header .right{
    display:flex !important;
    flex-wrap:wrap !important;
    justify-content:center !important;
    gap:10px !important;
  }
}

/* === FINAL CLAMP: force logo to a predictable size everywhere === */
img.logo-img{
  width:160px !important;      /* desktop */
  height:auto !important;
  max-width:none !important;   /* ignore global img{max-width:100%} */
  display:block !important;
}
picture.logo{
  display:inline-flex !important;
  align-items:center !important;
  width:auto !important;
  max-width:none !important;
}

/* Desktop header flex: logo takes content; icons occupy remaining space */
.wrap > header .left{ flex:0 0 auto !important; }
.wrap > header .right{ flex:1 1 auto !important; justify-content:flex-end !important; }

/* Mobile: logo above icons; icons wrap; smaller logo */
@media (max-width:600px){
  img.logo-img{ width:130px !important; }   /* mobile size */

  .wrap > header{
    display:flex !important;
    flex-direction:column !important;  /* logo on top */
    align-items:center !important;
    gap:8px !important;
  }
  .wrap > header .right{
    display:flex !important;
    flex-wrap:wrap !important;         /* icons can wrap */
    justify-content:center !important; /* centered under logo */
    gap:10px !important;
  }
}

